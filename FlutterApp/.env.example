# Application environment variables for FlutterApp

# ENVIRONMENT indicates the current environment (development|staging|production)
ENVIRONMENT=development

# Base URL for the API Gateway or backend service
API_BASE_URL=https://api.example.com

# Optional: Base URL specifically for auth service; defaults to API_BASE_URL if unset
AUTH_BASE_URL=

# Enable verbose HTTP logging (true|false)
LOG_NETWORK=false

# Toggles use of sqflite local cache (true|false)
FEATURE_USE_SQFLITE_CACHE=false
